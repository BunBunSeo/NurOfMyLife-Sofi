    <script>
        // Relationship Timer
        let startTime = new Date();
        let loveTimer = document.getElementById("love-timer");

        setInterval(function () {
            let currentTime = new Date();
            let diff = new Date(currentTime - startTime);
            let minutes = diff.getUTCMinutes();
            let seconds = diff.getUTCSeconds();
            loveTimer.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }, 1000);

        // Show Message Function for Stars
        function showMessage(message) {
            let heartfeltMessage = document.getElementById("heartfelt-message");
            heartfeltMessage.textContent = message;
            heartfeltMessage.style.display = "block";

            // Hide after 3 seconds
            setTimeout(() => {
                heartfeltMessage.style.display = "none";
            }, 3000);
        }
    </script>
